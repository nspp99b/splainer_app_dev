<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.splains.any? %>
      <h3>Splains (<%= @user.splains.count %>)</h3>
      <ol class="splains">
        <%= render @splains %>
      </ol>
    <% end %>
  </div>
</div>
